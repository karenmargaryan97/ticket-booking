{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "skipDefaultLibCheck": false,
    "pretty": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "dist",
    "baseUrl": ".",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./storage"
  ]
}
